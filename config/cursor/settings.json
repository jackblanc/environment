{
  "remote.SSH.serverShutdownTimeout": 3600, // DO NOT EDIT: Added by `arca ide cursor`
  "remote.SSH.showTrafficMonitor": false, // DO NOT EDIT: Added by `arca ide cursor`

  "zenMode.restore": true, // This will open Cursor in zen mode if you closed while in zen mode
  "zenMode.centerLayout": true, // Personal preference
  "zenMode.hideLineNumbers": false, // I like to see line numbers
  "zenMode.fullScreen": false, // I use rectangle and don't want to be fullscreen which zen mode does by default
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Set this to whatever you use most
  "editor.formatOnSave": true,
  "vim.useSystemClipboard": true, // Use system clipboard for yank and paste
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-d>": true // This conflicted with a vs code keybinding. This tells the vim extension to override it.
  },
  "vim.normalModeKeyBindings": [
    // LSP
    {
      "before": ["K"], // This shows the LSP hover info
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "r", "a"],
      "commands": ["editor.action.rename"]
    },
    // Apps
    {
      "before": ["<leader>", "l", "g"],
      "commands": ["lazygit-vscode.toggle"]
    },
    // Search (I end up mostly using vs code's default search keybindings)
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "f", "w"],
      "commands": ["workbench.action.findInFiles"]
    }
  ],
  "git.confirmSync": false,
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "git.enableSmartCommit": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "explorer.confirmDelete": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.lineNumbers": "relative",
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "update.releaseTrack": "prerelease",
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "remote.SSH.remotePlatform": {
    "arca.ssh": "linux"
  },
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "remote.autoForwardPortsSource": "hybrid",
  "typescript.tsserver.useSyntaxServer": "never",
  "typescript.tsserver.enableRegionDiagnostics": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.nodePath": "/Users/jack.blanc/.nvm/versions/node/v22.19.0/bin/node",
  "typescript.tsserver.maxTsServerMemory": 12288,
  "typescript.tsserver.log": "off",
  "typescript.tsserver.enableTracing": false,
  "editor.pasteAs.enabled": false,
  "remote.SSH.connectTimeout": 3600,
  "[scala]": {
    "editor.defaultFormatter": "scalameta.metals"
  }
}
